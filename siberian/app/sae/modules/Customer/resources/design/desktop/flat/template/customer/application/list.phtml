'<?php echo __js('No, go back', "'"); ?>',            buttons: true        }, function(value) {            if (!value) {                return false;            }            formget(deleteHref,                {},                function (data) {                    feature_form_success(data.message);                    // Reload only on success and when done!                    setTimeout(function () {                        location.reload();                    }, 1500)                },                function (data) {                    feature_form_error(JSON.parse(data.responseText).message);                },                false);        });    });    $.dynatableSetup({        table: {            defaultColumnIdStyle: 'noStyle'        },        features: {            paginate: true,            sort: true,            pushState: true,            search: true,            recordCount: true,            perPageSelect: false        },    });    let tableCustomers = $('#dynamic-customers');    tableCustomers.bind('dynatable:preinit', function(e, dynatable) {        dynatable.utility.textTransform.noStyle = function(text) {            return text;        };    });    // And on the table    tableCustomers.dynatable({        dataset: {            ajax: true,            ajaxUrl: '/customer/application/fetch-customers',            ajaxOnLoad: true,            records: [],            perPageDefault: 25        },        inputs: {            processingText: '<?php echo __jss("Loading ...") ?>',            searchPlaceholder: '<?php echo __jss("Search, filter ...") ?>',            recordCountText: '<?php echo __jss("Showing") ?> ',            filteredFrom: ' (<?php echo __jss("filtered from #TOTAL# total records") ?>)',            recordText: '<?php echo __jss("record") ?>',            recordTextPlural: '<?php echo __jss("records") ?>',            textOf: '<?php echo __jss("of") ?>',            textTo: '<?php echo __jss("to") ?>'        },        writers: {            _rowWriter: rowWriter        }    });</script>
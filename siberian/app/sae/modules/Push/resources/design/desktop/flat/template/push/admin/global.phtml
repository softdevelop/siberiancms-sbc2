<?php

use Siberian\Version;
use Application_Model_Application as Application;

$isSae = Version::is("SAE");
$pushForm = new Push_Form_Global();
if ($isSae) {
    $columns = 'col-lg-12';
    $application = Application::getInstance();
    $devices = $application->getDevices();
    $isPublished = false;
    foreach ($devices as $device) {
        if ($device->getStatusId() === "3") {
            $isPublished = true;
            break;
        }
    }
    $pushForm->removeElement("send_to_all");

    $applications = [];
} else {
    $isPublished = true;
    $columns = "col-lg-6";
    $unfilteredApplications = $this->getAdmin()->getPublishedApplicationsForAdmin();

    $applications = [];
    foreach ($unfilteredApplications as $unfilteredApplication) {
        if (!$unfilteredApplication->getIsLocked()) {
            $applications[] = $unfilteredApplication;
        }
    }
}

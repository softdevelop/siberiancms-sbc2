<script type="text/javascript">
    $(document).ready(function () {
        var reloadOverviewLinks = function () {
            try {
                iframe.f.overview['weblink_multi']();
            } catch(e) {
                //
            }
        };

        bindForms('#links');
        bindForms('#design', 'color-blue', reloadOverviewLinks);
        bindForms('#settings', 'color-blue', reloadOverviewLinks);

        // Sections
        $('.links-sortable').sortable({
            handle: ".link-handle",
            axis: "y",
            items: " .link-container",
            opacity: 0.7,
            start: function() {
                // Clear all forms inside elements!
                $("#links .close-edit").trigger("click");
            },
            stop: function() {
                let sections = $('.links-sortable tr[rel]');
                let data = {
                    indexes: []
                };
                let index = 1;
                sections.each(function() {
                    let el = $(this);
                    data.indexes.push(el.attr('rel'));

                    el.find('.link-position').text(index++);
                });

                data.value_id = '<?php echo $optionValue->getId() ?>';

                formget(
                    '/weblink/application/update-positions',
                    data,
                    function(result) {
                        reloadOverviewLinks();
                    },
                    function(result) {}
                );
            }
        });

        // External browser
        let toggleExternal = function () {
            let el = $("#external_browser");
            if (el.is(':checked')) {
                $("#android_options-element").hide();
                $("#ios_options-element").hide();
            } else {
                $("#android_options-element").show();
                $("#ios_options-element").show();
            }
        };

        $(document).off("change", "#external_browser");
        $(document).on("change", "#external_browser", function () {
            toggleExternal();
        });
        toggleExternal();

        setTimeout(function () {
            reloadOverviewLinks();
        }, 1000);
    });
</script>
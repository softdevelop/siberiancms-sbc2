<?php
global $layout;
$layout = $this->getLayout();

function getSection ($name, $clear = false) {
    global $layout;
    $html = $layout
        ->addPartial("view_general", "core_view_default", "application/view/{$name}.phtml")
        ->toHtml();

    if ($clear === true) {
        $html .= "<div class=\"clear\"></div>";
    }

    return $html;
}

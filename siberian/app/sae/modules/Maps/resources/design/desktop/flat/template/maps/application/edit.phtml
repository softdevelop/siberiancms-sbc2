<script type="text/javascript">

    $(document).ready(function () {
        bindForms('#list');
    });

    if(!$('#gmaps_libraries').length) {
        var script_tag = document.createElement('script');
        script_tag.setAttribute("id","gmaps_libraries");
        script_tag.setAttribute("type","text/javascript");
        script_tag.setAttribute("src","https://maps.google.com/maps/api/js?sensor=false&libraries=places&callback=initializeGmaps&key=<?php echo $googlemaps_key; ?>");
        (document.getElementsByTagName("head")[0] || document.documentElement).appendChild(script_tag);
    } else {
        initializeGmaps();
    }

    function initializeGmaps() {
        bindGmapsSearchBox($("#address"));
    }

    page.setCallback('didappear', function() {

        $('#mapsForm').submit(function() {
            if(!$(this).valid()) return false;
            reload($('#mapsForm'), '<?php echo $this->getUrl('maps/application/editpost') ?>', true, function(data) {
                if(data.success) {
                    page.reload();
                }
            });
            return false;
        });

    });

    page.setCallback('willdisappear', function() {
        $('#mapsForm').unbind('submit');
    });

</script>

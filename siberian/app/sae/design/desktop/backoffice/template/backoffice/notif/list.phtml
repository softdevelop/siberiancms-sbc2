                <th class="pointer" ng-click="order = 'is_high_priority'; by = !by"><i class="fa fa-warning"></i></th>
                <th class="pointer" ng-click="order = 'title'; by = !by"><?php echo __("Title"); ?></th>
                <th><?php echo __("Description"); ?></th>
